# Build stage
FROM golang:1.22 as build
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o server .

# Run stage (Cloud Run)
FROM gcr.io/distroless/base-debian12
ENV PORT=8080
ENV API_KEY=changeme
WORKDIR /srv
COPY --from=build /app/server /srv/server
EXPOSE 8080
USER nonroot
CMD ["/srv/server"]